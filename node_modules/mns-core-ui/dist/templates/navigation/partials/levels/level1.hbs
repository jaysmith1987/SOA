<ul class="nav__level1-panel">
    {{#each this}}
    <li>
        <input class="menu__mobile-level2--show" type="radio" name="menu"
               id="menu__mobile-level2__{{categoryIdentifier}}--show"
               aria-hidden="true"
               hidden/>
        <a href="{{link}}"><h1>{{categoryName}}</h1></a>
        <label class="menu__mobile-level2__label" for="menu__mobile-level2__{{categoryIdentifier}}--show" role="button"
               aria-hidden="true" hidden>{{categoryName}}</label>
        <ul class="nav__content">
            <li class="menu__mobile-level2--back" aria-hidden="true" hidden>
                <label for="menu__mobile-level1--show" role="button"></label>
                <span>{{categoryName}}</span>
            </li>
            <li>
                {{> templates/navigation/partials/levels/columns this}}
            </li>
        </ul>
        <label class="menu__mobile-level2__overlay" for="menu__mobile-level1--show"></label>
    </li>
    {{/each}}
</ul>
